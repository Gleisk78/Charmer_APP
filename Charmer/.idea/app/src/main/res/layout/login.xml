<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoportada_login"
    tools:context=".loginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="289dp"
                tools:layout_marginBottom="0dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="161dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="161dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/nombre_app2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/logo" />

                <TextView
                    android:id="@+id/nombre_app2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="171dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="172dp"
                    android:layout_marginBottom="70dp"
                    android:fontFamily="sans-serif"
                    android:text="Login"
                    android:textColor="#FFFFFF"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2"
                    tools:fontFamily="@font/be_vietnam_medium" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="530dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/cont_login">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:flow_horizontalAlign="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/LabelEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginRight="60dp"
                        android:fontFamily="@font/be_vietnam_bold"
                        android:text="Email"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="60dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_sobre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/icon_correo" />

                        <EditText
                            android:id="@+id/input_correo"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="#7E2702"
                            android:ems="10"
                            android:hint="correo@gmail.com"
                            android:inputType="textEmailAddress"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textColorHighlight="#7E2702"
                            android:textColorHint="#424242"
                            android:textColorLink="#7E2702"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/LabelPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="60dp"
                        android:fontFamily="@font/be_vietnam_bold"
                        android:text="Password"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="60dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_llave"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/icon_llave" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="#7E2702"
                            android:ems="10"
                            android:hint="********"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textColorHighlight="#7E2702"
                            android:textColorHint="#424242"
                            android:textColorLink="#7E2702"
                            android:textSize="18sp"
                            app:endIconMode="password_toggle"
                            app:endIconTint="#424242">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_password"
                                android:layout_marginEnd="9dp"
                                android:paddingRight="40dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#7E2702"
                                android:ems="10"
                                android:hint="hint"
                                android:inputType="textPassword"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                tools:ignore="TouchTargetSizeCheck" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/link_olvidar_contraseña"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="60dp"
                        android:text="¿Olvidaste la contraseña?"
                        android:textAlignment="textEnd"
                        android:textColor="#404040"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_ingreso"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/boton_redondo_negro"
                        android:text="Login"
                        tools:ignore="MissingConstraints" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="40dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sinCuenta"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="¿No tienes cuenta?"
                            android:textColor="#404040"
                            android:textSize="16sp"
                            app:flow_horizontalAlign="center"
                            tools:textAlignment="center" />

                        <TextView
                            android:id="@+id/linkRegistrar"
                            android:layout_width="109dp"
                            android:layout_height="29dp"
                            android:fontFamily="@font/be_vietnam_bold"
                            android:text="Registrate."
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            app:flow_horizontalAlign="center" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>