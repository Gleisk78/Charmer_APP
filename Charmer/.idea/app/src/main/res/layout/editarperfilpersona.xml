<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EditarPerfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#000000"
            android:foregroundGravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_flechaatras_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/Titulo_Perfil"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/be_vietnam"
                    android:text="Editar perfil"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/contenedor_crearperfil"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/btn_imgloadEP"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/perfilh"
                        android:scaleType="fitXY"
                        app:shapeAppearanceOverlay="@style/RoundedImageView"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="70dp"
                        android:fontFamily="@font/be_vietnam_bold"
                        android:text="Fullname"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editname"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="70dp"
                        android:backgroundTint="#7E2702"
                        android:ems="10"
                        android:hint="Nombre de Usuario"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textColorHighlight="#7E2702"
                        android:textColorHint="#424242"
                        android:textColorLink="#7E2702"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/TV_fono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="70dp"
                        android:fontFamily="@font/be_vietnam_bold"
                        android:text="Telefono"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editfono"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"

                        android:layout_marginStart="70dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="70dp"
                        android:backgroundTint="#7E2702"
                        android:ems="10"
                        android:hint="+56 9 5555 5555"
                        android:inputType="number|phone"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textColorHighlight="#7E2702"
                        android:textColorHint="#424242"
                        android:textColorLink="#7E2702"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/TV_Ubicacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="70dp"
                        android:fontFamily="@font/be_vietnam_bold"
                        android:text="UbicaciÃ³n"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editubi"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="70dp"
                        android:backgroundTint="#7E2702"
                        android:ems="10"
                        android:hint="@string/av_vicu_a_2010"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textColorHighlight="#7E2702"
                        android:textColorHint="#424242"
                        android:textColorLink="#7E2702"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/TV_CIF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="70dp"
                        android:fontFamily="@font/be_vietnam_bold"
                        android:text="@string/cif"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/EdiCif"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="70dp"
                        android:backgroundTint="#7E2702"
                        android:ems="10"
                        android:hint="@string/rut"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textColorHighlight="#7E2702"
                        android:textColorHint="#424242"
                        android:textColorLink="#7E2702"
                        android:textSize="18sp"
                        android:autofillHints="" />

                    <RadioGroup
                        android:id="@+id/gruporadio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="70dp"
                        android:layout_marginBottom="0dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/editman"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:button="@drawable/botoncheck_negro"
                            android:minHeight="48dp"
                            android:text="Hombre"
                            android:textColor="#000000" />

                        <RadioButton
                            android:id="@+id/editwoman"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:button="@drawable/botoncheck_negro"
                            android:minHeight="48dp"
                            android:text="@string/mujerP"
                            android:textColor="#000000" />

                        <RadioButton
                            android:id="@+id/editother"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:button="@drawable/botoncheck_negro"
                            android:minHeight="48dp"
                            android:text="@string/otro"
                            android:textColor="#000000" />

                    </RadioGroup>

                    <Button
                        android:id="@+id/btn_confirm"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="80dp"
                        android:background="@drawable/boton_redondo_negro"
                        android:text="Confirmar" />

                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>