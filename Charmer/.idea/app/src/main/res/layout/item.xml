<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:layout_marginBottom="40dp"
    android:background="#FFFFFF"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_usuariopost"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/fotoload2"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/RoundedImageView">

            </com.google.android.material.imageview.ShapeableImageView>

            <TextView
                android:id="@+id/nombreusupost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/be_vietnam_bold"
                android:text="Nombre"
                android:textColor="#000000">

            </TextView>

            <Space
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/btn_eliminar_publicacion"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                app:srcCompat="@drawable/xnegro" />

        </LinearLayout>

        <ImageView
            android:id="@+id/publicacion"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            tools:srcCompat="@drawable/postprueba" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            android:textAlignment="center">

            <Button
                android:id="@+id/btn_like"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/corasin"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cant_like"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:text="2000"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Descri_post"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="Descripcion"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Etiquetas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_etiquetas"
                    android:paddingLeft="12dp"
                    android:paddingTop="5dp"
                    android:text="#Etiquetas"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_compartir"
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/compartido"
                android:minWidth="48dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>