<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/black</item>
        <item name="android:colorPrimaryDark">@color/marron</item>
        <item name="colorAccent">@color/marron_dark</item>

        <item name="bottomNavigationStyle">@style/barrita_menu_principal</item>
    </style>

    <style name="barrita_menu_principal" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/marron</item>
        <item name="colorOnPrimary">@color/marron_dark</item>
    </style>

    <style name="RoundedImageView" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RadioButtonTienda" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/marron</item>
        <item name="android:textColorPrimary">@color/black</item>

    </style>
</resources>